            tle_orbital_periods = epoch_analysis['constellation_distribution']

            # Fail-Fast: by_constellation å¿…é ˆå­˜åœ¨
            valid, msg = self.check_field_exists(ntpu_coverage, 'by_constellation', 'ntpu_coverage')
            if not valid:
