# =============================================================================
# 軌道引擎系統 - 開發環境配置
# =============================================================================

# 🛰️ 核心系統配置
SATELLITE_ENV=development
VALIDATION_LEVEL=FAST
LOG_LEVEL=DEBUG
PYTHONUNBUFFERED=1
RELOAD_ON_CHANGE=true

# 📂 路徑配置
PYTHONPATH=/orbit-engine/src:/orbit-engine
DATA_BASE_PATH=/orbit-engine/data
TLE_DATA_PATH=/orbit-engine/data/tle_data
OUTPUTS_PATH=/orbit-engine/data/outputs
LOGS_PATH=/orbit-engine/data/logs
VALIDATION_PATH=/orbit-engine/data/validation_snapshots

# 🗄️ 資料庫配置 (開發用)
POSTGRES_HOST=postgres-dev
POSTGRES_PORT=5432
POSTGRES_DB=satellite_processing_dev
POSTGRES_USER=developer
POSTGRES_PASSWORD=dev_password
DATABASE_URL=postgresql://developer:dev_password@postgres-dev:5432/satellite_processing_dev

# 🔌 網路端口配置
HEALTH_CHECK_PORT=8900
DEV_API_PORT=8901
PYTHON_DEBUG_PORT=5678
POSTGRES_EXTERNAL_PORT=5433

# ⚡ 處理配置
STAGE_TIMEOUT=3600
MAX_CONCURRENT_STAGES=3
ENABLE_STAGE_MONITORING=true

# 🔧 開發工具配置
ENABLE_HOT_RELOAD=true
DEBUG_MODE=true
PROFILING_ENABLED=false
METRICS_COLLECTION=true

# 📊 監控配置
MONITORING_INTERVAL=30
HEALTH_CHECK_INTERVAL=30
LOG_RETENTION_DAYS=7

# 🚨 故障處理
AUTO_RETRY_FAILED_STAGES=true
MAX_RETRY_ATTEMPTS=3
FAIL_FAST_MODE=false